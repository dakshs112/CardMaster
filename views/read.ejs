<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>All Users</title>
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-800 p-10 text-white">
        <a href="/" class="text-blue-400 hover:text-blue-300 transition-colors">‚Üê Go to home</a>
        <h1 class="text-3xl font-bold mb-8 mt-4">All Users</h1>
        
        <% if (users && users.length > 0) { %>
            <div class="users grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                <% users.forEach(function(user) { %>
                    <div class="user bg-zinc-700 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
                        <div class="w-full h-72 bg-zinc-200 overflow-hidden">
                            <img class="w-full h-full object-cover object-center" 
                                 src="<%= user.image %>" 
                                 alt="<%= user.name %>'s profile picture"
                                 onerror="this.src='/images/default-avatar.png'">
                        </div>
                        <div class="p-4">
                            <h3 class="text-xl font-semibold tracking-tight mb-1"><%= user.name %></h3>
                            <p class="text-zinc-400 text-sm mb-4"><%= user.email %></p>
                            <div class="flex gap-3">
                                <a class="text-zinc-300 hover:text-white transition-colors" 
                                   href="/edit/<%= user._id || user.id %>">Edit</a>
                                <a class="text-red-400 hover:text-red-300 transition-colors" 
                                   href="/delete/<%= user._id || user.id %>" 
                                   onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="text-center py-16">
                <p class="text-zinc-400 text-lg">No users found.</p>
                <a href="/" class="inline-block mt-4 bg-blue-600 hover:bg-blue-700 px-6 py-2 rounded-lg transition-colors">
                    Add First User
                </a>
            </div>
        <% } %>
    </div>
</body>
</html>